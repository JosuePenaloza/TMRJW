<?xml version="1.0" encoding="utf-8"?>
<Window x:Class="TMRJW.BrowserWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Navegador" Height="600" Width="1000">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="3*" />
            <ColumnDefinition Width="2*" />
        </Grid.ColumnDefinitions>

        <DockPanel Grid.Column="0">
            <StackPanel Orientation="Horizontal" DockPanel.Dock="Top" Margin="4">
                <TextBox x:Name="UrlBox" Width="520" />
                <Button x:Name="BtnGo" Content="Ir" Margin="4,0,0,0" Click="BtnGo_Click" />
                <Button x:Name="BtnRefreshImages" Content="Actualizar imÃ¡genes" Margin="6,0,0,0" Click="BtnRefreshImages_Click" />
            </StackPanel>
            <WebBrowser x:Name="WebBrowserControl" LoadCompleted="WebBrowserControl_LoadCompleted" />
        </DockPanel>

        <Border Grid.Column="1" BorderThickness="1" BorderBrush="Gray" Padding="4" Margin="4">
            <ListBox x:Name="ImagesListBox" MouseDoubleClick="ImagesListBox_MouseDoubleClick">
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <StackPanel Orientation="Vertical" Margin="4">
                            <Image Source="{Binding}" Width="200" Height="120" Stretch="Uniform" />
                        </StackPanel>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>
        </Border>
    </Grid>
</Window>