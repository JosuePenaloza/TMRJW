<?xml version="1.0" encoding="utf-8" ?>
<Window x:Class="TMRJW.BrowserWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:TMRJW"
        Title="Navegador" Height="680" Width="1100" MinWidth="900" MinHeight="520">
    <Window.Resources>
        <!-- Plantilla única para miniaturas (soporta CachedImage y BitmapImage) -->
        <DataTemplate x:Key="ThumbnailTemplate">
            <Border Margin="6" Background="White" CornerRadius="4" BorderBrush="#DDD" BorderThickness="1"
                    Padding="6" MinWidth="120" MinHeight="150"
                    Width="{Binding RelativeSource={RelativeSource AncestorType=WrapPanel}, Path=ItemWidth}">
                <Grid>
                    <Image Stretch="UniformToFill" Height="110" VerticalAlignment="Top">
                        <Image.Source>
                            <PriorityBinding>
                                <Binding Path="Image" />
                                <Binding /> <!-- si el item es BitmapImage -->
                            </PriorityBinding>
                        </Image.Source>
                    </Image>

                    <!-- Botón eliminar (aparece solo en hover sobre la miniatura) -->
                    <Button Width="30" Height="30"
                            Content="🗑"
                            ToolTip="Eliminar imagen"
                            Click="BtnDeleteImage_Click"
                            DataContext="{Binding}"
                            HorizontalAlignment="Right"
                            VerticalAlignment="Top"
                            Margin="0,6,10,0"
                            Panel.ZIndex="2">
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Opacity" Value="0" />
                                <Setter Property="Background" Value="#E53935" />
                                <Setter Property="Foreground" Value="White" />
                                <Setter Property="BorderBrush" Value="#B71C1C" />
                                <Setter Property="BorderThickness" Value="1" />
                                <Setter Property="Padding" Value="0" />
                                <Setter Property="HorizontalContentAlignment" Value="Center" />
                                <Setter Property="VerticalContentAlignment" Value="Center" />
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding IsMouseOver, RelativeSource={RelativeSource AncestorType=Border}}" Value="True">
                                        <Setter Property="Opacity" Value="1" />
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                    </Button>
                </Grid>
            </Border>
        </DataTemplate>
    </Window.Resources>

    <Grid Margin="6">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="0.55*" />
            <ColumnDefinition Width="0.45*" />
        </Grid.ColumnDefinitions>

        <!-- LEFT: Navegador (sin cambios) -->
        <Grid x:Name="PrincipalNavegacion" Grid.Column="0">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>

            <DockPanel Grid.Row="0" Margin="4" LastChildFill="True">
                <StackPanel Orientation="Horizontal" DockPanel.Dock="Left" VerticalAlignment="Center" Margin="0,0,8,0">
                    <Button x:Name="BtnBack" Width="28" Height="24" Background="#FFD900" ToolTip="Atrás"
                            Click="BtnBack_Click" Margin="0,0,6,0" FontSize="14" Content="◀"/>
                    <Button x:Name="BtnForward" Width="28" Height="24" Background="#FFD900" ToolTip="Adelante"
                            Click="BtnForward_Click" FontSize="14" Content="▶"/>
                </StackPanel>

                <TextBox x:Name="UrlBox" Margin="0" Height="28" FontSize="13"
                         HorizontalContentAlignment="Left" Padding="6" Width="188"/>

                <StackPanel Orientation="Horizontal" DockPanel.Dock="Right" VerticalAlignment="Center" Margin="6,0,0,0">
                    <Button x:Name="BtnGo" Content="Ir" Width="44" Height="24" Margin="0,0,6,0" Click="BtnGo_Click"/>
                    <Button x:Name="BtnRefresh" Content="Actualizar" Background="#FF4D4D" Foreground="White" Width="80" Height="28" Click="BtnRefreshImages_Click" Margin="0,0,6,0"/>
                    <Button x:Name="BtnCaptureFromPage" Content="Capturar" Background="#E53935" Foreground="White" Width="80" Height="28" Click="BtnCaptureFromPage_Click"/>
                </StackPanel>
            </DockPanel>

            <Border Grid.Row="1" Background="White" CornerRadius="4" BorderBrush="#DDD" BorderThickness="1">
                <WebBrowser x:Name="WebBrowserControl" />
            </Border>
        </Grid>

        <!-- RIGHT: Panel de inventario / previsualización -->
        <Grid Grid.Column="1" Margin="8,0,0,0">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="0.53*"/>
                <RowDefinition Height="0.47*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <Grid Grid.Row="0" Margin="0,4,0,6">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0" Orientation="Horizontal" HorizontalAlignment="Left" >
                    <Button x:Name="BtnReturnToMain" Content="🏠" Background="#2196F3" Foreground="White" Height="30" Width="36"
                            Click="BtnReturnToMain_Click" Margin="0,0,6,0" ToolTip="Regresar a control"/>
                    <Button x:Name="BtnProjectionPower" Content="⏻" Background="#FF8C00" Foreground="White" Height="30" Width="36"
                            Click="BtnProjectionPower_Click" Margin="0,0,6,0" FontSize="16" ToolTip="Encender/Apagar proyección"/>
                    <Button x:Name="BtnLoadExtra" Content="📁" Background="#8E24AA" Foreground="White" Height="30" Width="36"
                            Click="BtnLoadExtra_Click" Margin="0,0,6,0" ToolTip="Cargar imágenes / vídeos"/>
                </StackPanel>

                <Button Grid.Column="2" x:Name="BtnTextoDelAnio" Content="Texto del Año" Background="#2E7D32" Foreground="White"
                        Height="32" MinWidth="140" Click="BtnTextoDelAnio_Click" ToolTip="Proyectar Texto del Año" HorizontalAlignment="Right"/>
            </Grid>

            <!-- Pestañas del inventario: aquí se crean dinámicamente desde code-behind -->
            <TabControl x:Name="InventoryTabs" Grid.Row="1" Grid.RowSpan="2" Margin="0,0,0,6" />

            <!-- Preview y controles (sin cambios) -->
            <Border Grid.Row="3" Background="#E8F7FF" BorderBrush="#BEE6FF" BorderThickness="1" CornerRadius="4" Padding="6" Margin="0,8,0,6">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <Grid Grid.Row="0" x:Name="PreviewContainer">
                        <Image x:Name="PreviewImage" Stretch="Uniform" Visibility="Visible" />
                        <MediaElement x:Name="PreviewMedia" LoadedBehavior="Manual" Visibility="Collapsed" />
                    </Grid>

                    <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Left" Margin="0,8,0,0">
                        <TextBlock x:Name="TxtPreviewInfo" Text="Imagen / Video" VerticalAlignment="Center" Margin="0,0,12,0"/>
                        <StackPanel Orientation="Horizontal" x:Name="PreviewMediaControls" Visibility="Collapsed">
                            <Button x:Name="BtnPreviewPlay" Content="⏵" Width="36" Height="28" Click="BtnPreviewPlay_Click" Margin="0,0,6,0"/>
                            <Button x:Name="BtnPreviewPause" Content="⏸" Width="36" Height="28" Click="BtnPreviewPause_Click" Margin="0,0,6,0"/>
                            <Button x:Name="BtnPreviewStop" Content="⏹" Width="36" Height="28" Click="BtnPreviewStop_Click" />
                        </StackPanel>
                    </StackPanel>
                </Grid>
            </Border>

            <!-- Botones de zoom/pan/reset (sin cambios) -->
            <Border Grid.Row="4" Background="#FFFFFF" CornerRadius="4" BorderBrush="#C7A77B" BorderThickness="1" Padding="6" Margin="0,0,0,4">
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
                    <StackPanel Orientation="Horizontal" Margin="0,0,12,0" x:Name="ZoomButtonsPanel" VerticalAlignment="Center">
                        <Button x:Name="BtnPanUp" Content="▲" Width="36" Height="28" Background="#A67C52" Foreground="White" Click="BtnPanUp_Click" Margin="0,0,6,0"/>
                        <Button x:Name="BtnPanLeft" Content="◀" Width="36" Height="28" Background="#A67C52" Foreground="White" Click="BtnPanLeft_Click" Margin="0,0,6,0"/>
                        <Button x:Name="BtnZoomIn" Content="+" Width="36" Height="28" Background="#A67C52" Foreground="White" Click="BtnZoomIn_Click" Margin="0,0,6,0"/>
                        <Button x:Name="BtnZoomOut" Content="–" Width="36" Height="28" Background="#A67C52" Foreground="White" Click="BtnZoomOut_Click" Margin="0,0,6,0"/>
                        <Button x:Name="BtnPanRight" Content="▶" Width="36" Height="28" Background="#A67C52" Foreground="White" Click="BtnPanRight_Click" Margin="0,0,6,0"/>
                        <Button x:Name="BtnPanDown" Content="▼" Width="36" Height="28" Background="#A67C52" Foreground="White" Click="BtnPanDown_Click" Margin="0,0,6,0"/>
                        <Button x:Name="BtnResetZoom" Content="Reset" Width="60" Height="28" Background="#A67C52" Foreground="White" Click="BtnResetZoom_Click"/>
                    </StackPanel>

                    <StackPanel Orientation="Horizontal" x:Name="MediaButtonsPanel" Visibility="Collapsed" VerticalAlignment="Center" Margin="12,0,0,0">
                        <Button x:Name="BtnMediaPlay" Content="⏵" Width="36" Height="28" Click="BtnMediaPlay_Click" Margin="0,0,6,0"/>
                        <Button x:Name="BtnMediaPause" Content="⏸" Width="36" Height="28" Click="BtnMediaPause_Click" Margin="0,0,6,0"/>
                        <Button x:Name="BtnMediaStop" Content="⏹" Width="36" Height="28" Click="BtnMediaStop_Click"/>
                    </StackPanel>
                </StackPanel>
            </Border>
        </Grid>
    </Grid>
</Window>