<Window x:Class="TMRJW.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TMRJW"
        mc:Ignorable="d"
        Title="MainWindow" Height="593" Width="800">
    <Grid>

        <Grid.Resources>
            <Style x:Key="BotonEstiloHover" TargetType="Button">
                <Setter Property="Foreground" Value="White" />
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="Button">
                            <Border x:Name="Border" 
                                    Background="{TemplateBinding Background}"
                                    BorderBrush="{TemplateBinding BorderBrush}"
                                    BorderThickness="{TemplateBinding BorderThickness}"
                                    CornerRadius="3">
                                <ContentPresenter HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                                                  VerticalAlignment="{TemplateBinding VerticalContentAlignment}"/>
                            </Border>
                            <ControlTemplate.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter TargetName="Border" Property="Opacity" Value="0.85"/>
                                </Trigger>
                                <Trigger Property="IsPressed" Value="True">
                                    <Setter TargetName="Border" Property="Opacity" Value="0.75"/>
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
            </Style>
        </Grid.Resources>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="0.45*" />
            <ColumnDefinition Width="0.55*" />
        </Grid.ColumnDefinitions>

        <StackPanel Grid.Column="0" Background="#363636">

            <Grid Margin="10,10,10,5">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>

                <TextBlock Grid.Column="0" Text="CONTROL DE MEDIOS" Foreground="White" FontSize="18" FontWeight="Bold" VerticalAlignment="Center"/>

                <Button Grid.Column="1" x:Name="BtnAjustes" Content="⚙️ Ajustes" Height="30" Width="80" Click="BtnAjustes_Click"/>
            </Grid>

            <StackPanel Orientation="Horizontal" Margin="10,5,10,10" HorizontalAlignment="Left">
                <TextBlock Text="Guía Semanal:" Foreground="White" VerticalAlignment="Center" Margin="0,0,10,0"/>
                <Button x:Name="BtnCargarArchivo" Content="Cargar Guía (EPUB)" Height="30" Width="130" Click="BtnCargarArchivo_Click"/>
            </StackPanel>

            <StackPanel Orientation="Horizontal" Margin="10,0,10,10" HorizontalAlignment="Stretch">
                <Button x:Name="BtnSemanaAnterior" Content="❮" Width="30" Margin="0,0,5,0" Click="BtnSemanaAnterior_Click" />
                <ComboBox x:Name="CboSemanas" SelectedIndex="0" Margin="0,0,5,0" HorizontalAlignment="Stretch" Width="150" SelectionChanged="CboSemanas_SelectionChanged">
                    <ComboBoxItem Content="22-28 de Septiembre (Actual)" />
                    <ComboBoxItem Content="29 de Sept - 5 de Octubre" />
                </ComboBox>
                <Button x:Name="BtnSemanaSiguiente" Content="❯" Width="30" Click="BtnSemanaSiguiente_Click" />

                <Button x:Name="BtnAsociarMedia" Content="Asociar Videos" Margin="10,0,0,0" Width="100" Click="BtnAsociarMedia_Click"/>
            </StackPanel>

            <ListBox x:Name="ListaPrograma" 
                     Background="#444444" 
                     Foreground="White" 
                     MinHeight="300" 
                     Margin="10,0,10,10"
                     AllowDrop="True" 
                     Drop="ListaPrograma_Drop"
                     MouseDoubleClick="ListaPrograma_MouseDoubleClick" />

            <Button x:Name="BtnTextoDelAnio" 
                    Content="PROYECTAR TEXTO DEL AÑO" 
                    Style="{StaticResource BotonEstiloHover}" 
                    Background="#5D5D5D" 
                    Foreground="White" 
                    Margin="10,0,10,5" 
                    Height="30" 
                    Click="BtnTextoDelAnio_Click"/>

            <Button x:Name="BtnProyectarHDMI" 
                    Content="PROYECTAR ON/OFF (OFF)" 
                    Style="{StaticResource BotonEstiloHover}" 
                    Background="#FF8C00" 
                    Foreground="White" 
                    Margin="10" 
                    Height="40" 
                    Click="BtnProyectarHDMI_Click"/>

        </StackPanel>

        <Grid Grid.Column="1" Background="Black">

            <Image x:Name="MonitorDeSalida" 
                   Stretch="Uniform" 
                   HorizontalAlignment="Stretch" 
                   VerticalAlignment="Stretch" 
                   Margin="10" />

            <StackPanel VerticalAlignment="Bottom" Margin="10" Orientation="Vertical">
                <TextBlock x:Name="TxtInfoMedia" Text="Reproduciendo: Ninguno" Foreground="White" Margin="0,0,0,5"/>
                <Slider x:Name="SldVolume" Value="75" Minimum="0" Maximum="100"/>
            </StackPanel>
        </Grid>
    </Grid>
</Window>