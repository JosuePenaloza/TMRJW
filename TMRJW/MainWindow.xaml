<Window x:Class="TMRJW.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TMRJW"
        mc:Ignorable="d"
        Title="TMRJW - Control" Height="593" Width="800">
    <Grid>

        <Grid.Resources>
            <Style x:Key="BotonEstiloHover" TargetType="Button">
                <Setter Property="Foreground" Value="White" />
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="Button">
                            <Border x:Name="Border" 
                                        Background="{TemplateBinding Background}"
                                        BorderBrush="{TemplateBinding BorderBrush}"
                                        BorderThickness="{TemplateBinding BorderThickness}"
                                        CornerRadius="3">
                                <ContentPresenter HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                                                      VerticalAlignment="{TemplateBinding VerticalContentAlignment}"/>
                            </Border>
                            <ControlTemplate.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter TargetName="Border" Property="Opacity" Value="0.85"/>
                                </Trigger>
                                <Trigger Property="IsPressed" Value="True">
                                    <Setter TargetName="Border" Property="Opacity" Value="0.75"/>
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
            </Style>

            <DataTemplate x:Key="ImageItemDataTemplate">
                <Border Margin="6" Background="#2E2E2E" CornerRadius="4">
                    <Image Source="{Binding}"
                         Stretch="UniformToFill"
                         HorizontalAlignment="Stretch"
                         VerticalAlignment="Stretch" />
                </Border>
            </DataTemplate>

        </Grid.Resources>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="0.45*" />
            <ColumnDefinition Width="0.55*" />
        </Grid.ColumnDefinitions>

        <!-- LEFT PANEL: usar DockPanel para que los botones queden pegados abajo -->
        <DockPanel Grid.Column="0" Background="#363636" LastChildFill="True">

            <!-- Header top -->
            <Grid DockPanel.Dock="Top" Margin="10,10,10,5">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>
                <TextBlock Grid.Column="0" Text="CONTROL DE MEDIOS" Foreground="White" FontSize="18" FontWeight="Bold" VerticalAlignment="Center"/>
                <Button Grid.Column="1" x:Name="BtnAjustes" Content="⚙️ Ajustes" Height="30" Width="80" Click="BtnAjustes_Click"/>
            </Grid>

            <!-- Toolbar top -->
            <StackPanel DockPanel.Dock="Top" Orientation="Horizontal" Margin="10,5,10,10" HorizontalAlignment="Stretch">
                <Button x:Name="BtnCargarArchivo" Content="Cargar Guía (EPUB)" Height="30" Width="130" Click="BtnCargarArchivo_Click" Margin="0,0,10,0"/>
                <Button x:Name="BtnAsociarMedia" Content="Asociar Videos" Width="95" Click="BtnAsociarMedia_Click" Height="30" />
                <Button x:Name="BtnOpenBrowser" Content="Navegar Biblioteca" Click="BtnOpenBrowser_Click" Margin="6,0,0,0" />
            </StackPanel>

            <!-- Bottom action buttons fijados al borde inferior para liberar espacio central -->
            <StackPanel DockPanel.Dock="Bottom" Margin="10" Orientation="Vertical" VerticalAlignment="Bottom" HorizontalAlignment="Stretch" >
                <Button x:Name="BtnTextoDelAnio" 
                        Content="PROYECTAR TEXTO DEL AÑO" 
                        Style="{StaticResource BotonEstiloHover}" 
                        Background="#5D5D5D" 
                        Foreground="White" 
                        Height="36" 
                        Click="BtnTextoDelAnio_Click" 
                        Margin="0,0,0,8"/>
                <Button x:Name="BtnProyectarHDMI" 
                        Content="PROYECTAR ON/OFF (OFF)" 
                        Style="{StaticResource BotonEstiloHover}" 
                        Background="#FF8C00" 
                        Foreground="White" 
                        Height="44" 
                        Click="BtnProyectarHDMI_Click"/>
            </StackPanel>

            <!-- El TabControl queda como último elemento y rellena el espacio restante -->
            <TabControl Margin="10,0,10,10" Background="#363636">
                <TabItem Header="📖 Programa Semanal" Foreground="Black">
                    <ListBox x:Name="ListaPrograma" 
                                 Background="#444444" 
                                 Foreground="White" 
                                 BorderThickness="0"
                                 Margin="0"
                                 AllowDrop="True" 
                                 Drop="ListaPrograma_Drop"
                                 MouseDoubleClick="ListaPrograma_MouseDoubleClick" d:ItemsSource="{d:SampleData ItemCount=5}" />
                </TabItem>

                <TabItem Header="🖼️ Imágenes" Foreground="Black">
                    <Grid Background="#363636">
                        <TabControl x:Name="TabControlImagenes" Background="#363636" Margin="6"/>
                    </Grid>
                </TabItem>

                <TabItem Header="🎬 Videos / 🎧 Audios" Foreground="Black">
                    <Grid Background="#363636">
                        <!-- Lista de videos: ItemContainerStyle + plantilla con botón fijo a la orilla -->
                        <ListBox x:Name="ListaVideos"
                                 HorizontalContentAlignment="Stretch"
                                 VerticalContentAlignment="Center"
                                 ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                                 ScrollViewer.VerticalScrollBarVisibility="Auto"
                                 VirtualizingStackPanel.IsVirtualizing="False"
                                 SelectionChanged="ListaVideos_SelectionChanged">
                            <ListBox.ItemContainerStyle>
                                <Style TargetType="ListBoxItem">
                                    <Setter Property="Padding" Value="4"/>
                                    <Setter Property="Margin" Value="4,6"/>
                                </Style>
                            </ListBox.ItemContainerStyle>

                            <ListBox.ItemTemplate>
                                <DataTemplate>
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="56"/>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="40"/>
                                        </Grid.ColumnDefinitions>

                                        <Image Source="{Binding Thumbnail}" Width="48" Height="48" Margin="4" Grid.Column="0" VerticalAlignment="Center"/>
                                        <TextBlock Text="{Binding FileName}" VerticalAlignment="Center" Margin="8,0" Grid.Column="1" TextTrimming="CharacterEllipsis"/>
                                        <!-- Botón X siempre pegado a la orilla (columna final) -->
                                        <Button Content="✖"
                                                Width="28" Height="28"
                                                Grid.Column="2"
                                                HorizontalAlignment="Right"
                                                VerticalAlignment="Center"
                                                ToolTip="Eliminar vídeo"
                                                Click="BtnDeleteVideo_Click"
                                                Background="#FFEEEEEE"
                                                Foreground="Black"/>
                                    </Grid>
                                </DataTemplate>
                            </ListBox.ItemTemplate>
                        </ListBox>
                    </Grid>
                </TabItem>
            </TabControl>
        </DockPanel>

        <!-- RIGHT PANEL (sin cambios funcionales) -->
        <Grid Grid.Column="1" Background="Black">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <!-- PREVIEW arriba -->
                <RowDefinition Height="*"/>
                <!-- IMAGEN GRANDE / Monitor abajo -->
            </Grid.RowDefinitions>

            <Border Grid.Row="0" Margin="10,10,10,6" Background="#2E2E2E" CornerRadius="4" Padding="6">
                <StackPanel>
                    <TextBlock Text="Previsualización" Foreground="#CCCCCC" FontWeight="Bold" Margin="0,0,0,6"/>
                    <!-- AÑADIDO ClipToBounds para evitar overflow del Image cuando se escala -->
                    <Grid ClipToBounds="True">
                        <Image x:Name="PreviewImage"
                               Height="120"
                               Stretch="Uniform"
                               HorizontalAlignment="Center"
                               VerticalAlignment="Center"
                               MouseWheel="PreviewImage_MouseWheel"
                               MouseDown="PreviewImage_MouseDown"
                               MouseMove="PreviewImage_MouseMove"
                               MouseUp="PreviewImage_MouseUp"
                               Cursor="Hand"
                               RenderTransformOrigin="0.5,0.5">
                            <Image.RenderTransform>
                                <TransformGroup>
                                    <ScaleTransform x:Name="PreviewScaleTransform" ScaleX="1" ScaleY="1" />
                                    <TranslateTransform x:Name="PreviewTranslateTransform" X="0" Y="0" />
                                </TransformGroup>
                            </Image.RenderTransform>
                        </Image>

                        <Border HorizontalAlignment="Left" VerticalAlignment="Bottom" Margin="6"
                                Background="#40000000" Padding="4" CornerRadius="4">
                            <StackPanel Orientation="Horizontal">
                                <Button x:Name="BtnPreviewReset" Click="BtnPreviewReset_Click" Width="60" Height="24">Reset</Button>
                            </StackPanel>
                        </Border>
                    </Grid>
                </StackPanel>
            </Border>

            <Grid Grid.Row="1" ClipToBounds="True">
                <Image x:Name="MonitorDeSalida"
                       Stretch="Uniform"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Center"
                       Margin="10"
                       MouseWheel="Monitor_MouseWheel"
                       MouseDown="Monitor_MouseDown"
                       MouseMove="Monitor_MouseMove"
                       MouseUp="Monitor_MouseUp"
                       Cursor="Hand"
                       RenderTransformOrigin="0.5,0.5">
                    <Image.RenderTransform>
                        <TransformGroup>
                            <ScaleTransform x:Name="MonitorScaleTransform" ScaleX="1" ScaleY="1" />
                            <TranslateTransform x:Name="MonitorTranslateTransform" X="0" Y="0" />
                        </TransformGroup>
                    </Image.RenderTransform>
                </Image>

                <StackPanel VerticalAlignment="Bottom" Margin="10" Orientation="Vertical">
                    <TextBlock x:Name="TxtInfoMedia" Text="Reproduciendo: Ninguno" Foreground="White" Margin="0,0,0,6"/>

                    <StackPanel x:Name="MediaControlsPanel" Orientation="Vertical" Visibility="Collapsed">
                        <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Margin="0,0,0,6">
                            <TextBlock x:Name="TxtCurrentTime" Text="00:00:00" Foreground="White" VerticalAlignment="Center" Margin="0,0,6,0"/>
                            <Slider x:Name="SldTimeline" Minimum="0" Maximum="1" Value="0" Width="320"
                                    ValueChanged="SldTimeline_ValueChanged"
                                    PreviewMouseDown="SldTimeline_PreviewMouseDown"
                                    PreviewMouseUp="SldTimeline_PreviewMouseUp"/>
                            <TextBlock x:Name="TxtTotalTime" Text=" / 00:00:00" Foreground="White" VerticalAlignment="Center" Margin="6,0,0,0"/>
                        </StackPanel>

                        <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                            <Button x:Name="BtnPrev" Content="⏮" Width="36" Height="28" Click="BtnPrev_Click" Margin="0,0,6,0"/>
                            <Button x:Name="BtnPlayPause" Content="⏵" Width="36" Height="28" Click="BtnPlayPause_Click" Margin="0,0,6,0"/>
                            <Button x:Name="BtnStop" Content="⏹" Width="36" Height="28" Click="BtnStop_Click" Margin="0,0,6,0"/>
                            <Button x:Name="BtnNext" Content="⏭" Width="36" Height="28" Click="BtnNext_Click" Margin="0,0,12,0"/>
                            <TextBlock Text="Vol" Foreground="White" VerticalAlignment="Center" Margin="0,0,6,0"/>
                            <Slider x:Name="SldVolume" Value="75" Minimum="0" Maximum="100" ValueChanged="SldVolume_ValueChanged" Width="120" Margin="0,0,12,0"/>
                        </StackPanel>
                    </StackPanel>

                    <!-- Controles manuales de Zoom / Pan para la imagen grande (mover aquí) -->
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" Margin="0,6,0,0">
                        <Button x:Name="BtnZoomIn" Click="BtnZoomIn_Click" Width="36" Height="28" ToolTip="Zoom +" Style="{StaticResource BotonEstiloHover}">+</Button>
                        <Button x:Name="BtnZoomOut" Click="BtnZoomOut_Click" Width="36" Height="28" ToolTip="Zoom -" Style="{StaticResource BotonEstiloHover}" Margin="6,0,0,0">-</Button>

                        <StackPanel Orientation="Horizontal" Margin="12,0,0,0">
                            <Button x:Name="BtnPanLeft" Click="BtnPanLeft_Click" Width="36" Height="28" ToolTip="Izquierda" Style="{StaticResource BotonEstiloHover}">◀</Button>
                            <Button x:Name="BtnPanRight" Click="BtnPanRight_Click" Width="36" Height="28" ToolTip="Derecha" Style="{StaticResource BotonEstiloHover}" Margin="6,0,0,0">▶</Button>
                            <Button x:Name="BtnPanUp" Click="BtnPanUp_Click" Width="36" Height="28" ToolTip="Arriba" Style="{StaticResource BotonEstiloHover}" Margin="12,0,0,0">▲</Button>
                            <Button x:Name="BtnPanDown" Click="BtnPanDown_Click" Width="36" Height="28" ToolTip="Abajo" Style="{StaticResource BotonEstiloHover}" Margin="6,0,0,0">▼</Button>
                        </StackPanel>
                    </StackPanel>

                    <Button x:Name="BtnResetZoom" Content="Reset Zoom Imagen" Width="160" Height="28" Click="BtnResetZoom_Click" Style="{StaticResource BotonEstiloHover}" Background="#5D5D5D" Margin="0,6,0,0"/>
                </StackPanel>
            </Grid>
        </Grid>
    </Grid>
</Window>