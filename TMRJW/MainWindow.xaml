<Window x:Class="TMRJW.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TMRJW"
        mc:Ignorable="d"
        Title="TMRJW - Control" Height="593" Width="800">
    <Grid>

        <Grid.Resources>
            <Style x:Key="BotonEstiloHover" TargetType="Button">
                <Setter Property="Foreground" Value="White" />
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="Button">
                            <Border x:Name="Border" 
                                        Background="{TemplateBinding Background}"
                                        BorderBrush="{TemplateBinding BorderBrush}"
                                        BorderThickness="{TemplateBinding BorderThickness}"
                                        CornerRadius="3">
                                <ContentPresenter HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                                                      VerticalAlignment="{TemplateBinding VerticalContentAlignment}"/>
                            </Border>
                            <ControlTemplate.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter TargetName="Border" Property="Opacity" Value="0.85"/>
                                </Trigger>
                                <Trigger Property="IsPressed" Value="True">
                                    <Setter TargetName="Border" Property="Opacity" Value="0.75"/>
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
            </Style>

            <DataTemplate x:Key="ImageItemDataTemplate">
                <Image Source="{Binding}" 
                               Width="80" Height="80" 
                               Stretch="UniformToFill" 
                               Margin="4" Cursor="Hand" />
            </DataTemplate>

        </Grid.Resources>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="0.45*" />
            <ColumnDefinition Width="0.55*" />
        </Grid.ColumnDefinitions>

        <StackPanel Grid.Column="0" Background="#363636">

            <Grid Margin="10,10,10,5">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>
                <TextBlock Grid.Column="0" Text="CONTROL DE MEDIOS" Foreground="White" FontSize="18" FontWeight="Bold" VerticalAlignment="Center"/>
                <Button Grid.Column="1" x:Name="BtnAjustes" Content="⚙️ Ajustes" Height="30" Width="80" Click="BtnAjustes_Click"/>
            </Grid>

            <StackPanel Orientation="Horizontal" Margin="10,5,10,10" HorizontalAlignment="Stretch">
                <TextBlock Text="Guía Semanal:" Foreground="White" VerticalAlignment="Center" Margin="0,0,10,0"/>
                <Button x:Name="BtnCargarArchivo" Content="Cargar Guía (EPUB)" Height="30" Width="130" Click="BtnCargarArchivo_Click" Margin="0,0,10,0"/>
                <Button x:Name="BtnAsociarMedia" Content="Asociar Videos" Width="95" Click="BtnAsociarMedia_Click" Height="30" />
            </StackPanel>

            <!-- Panel de PREVIEW: muestra la miniatura seleccionada por single-click -->
            <Border Margin="10,0,10,10" Background="#2E2E2E" CornerRadius="4" Padding="6">
                <StackPanel>
                    <TextBlock Text="Previsualización" Foreground="#CCCCCC" FontWeight="Bold" Margin="0,0,0,6"/>
                    <Image x:Name="PreviewImage" Height="120" Stretch="Uniform" HorizontalAlignment="Center" VerticalAlignment="Center" />
                </StackPanel>
            </Border>

            <TabControl Margin="10,0,10,10" Height="300">
                <TabItem Header="📖 Programa Semanal" Foreground="Black">
                    <ListBox x:Name="ListaPrograma" 
                                 Background="#444444" 
                                 Foreground="White" 
                                 BorderThickness="0"
                                 Margin="0"
                                 AllowDrop="True" 
                                 Drop="ListaPrograma_Drop"
                                 MouseDoubleClick="ListaPrograma_MouseDoubleClick" />
                </TabItem>

                <TabItem Header="🖼️ Imágenes" Foreground="Black">
                    <TabControl x:Name="TabControlImagenes" Background="#363636">
                    </TabControl>
                </TabItem>

                <TabItem Header="🎬 Videos / 🎧 Audios" Foreground="Black">
                    <Grid Background="#363636">
                        <TextBlock Text="Contenido de Videos y Audios irá aquí." 
                                       Foreground="#CCCCCC" 
                                       VerticalAlignment="Center" 
                                       HorizontalAlignment="Center"
                                       FontStyle="Italic"/>
                    </Grid>
                </TabItem>
            </TabControl>

            <Button x:Name="BtnTextoDelAnio" 
                        Content="PROYECTAR TEXTO DEL AÑO" 
                        Style="{StaticResource BotonEstiloHover}" 
                        Background="#5D5D5D" 
                        Foreground="White" 
                        Margin="10,0,10,5" 
                        Height="30" 
                        Click="BtnTextoDelAnio_Click"/>

            <Button x:Name="BtnProyectarHDMI" 
                        Content="PROYECTAR ON/OFF (OFF)" 
                        Style="{StaticResource BotonEstiloHover}" 
                        Background="#FF8C00" 
                        Foreground="White" 
                        Margin="10" 
                        Height="40" 
                        Click="BtnProyectarHDMI_Click"/>

        </StackPanel>

        <Grid Grid.Column="1" Background="Black">
            <Image x:Name="MonitorDeSalida" 
                       Stretch="Uniform" 
                       HorizontalAlignment="Stretch" 
                       VerticalAlignment="Stretch" 
                       Margin="10" />

            <StackPanel VerticalAlignment="Bottom" Margin="10" Orientation="Vertical">
                <TextBlock x:Name="TxtInfoMedia" Text="Reproduciendo: Ninguno" Foreground="White" Margin="0,0,0,5"/>
                <Slider x:Name="SldVolume" Value="75" Minimum="0" Maximum="100" ValueChanged="SldVolume_ValueChanged"/>
            </StackPanel>
        </Grid>
    </Grid>
</Window>