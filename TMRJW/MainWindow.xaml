<Window x:Class="TMRJW.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TMRJW"
        mc:Ignorable="d"
        Title="TMRJW - Control" Height="593" Width="800">
    <Grid>

        <Grid.Resources>
            <Style x:Key="BotonEstiloHover" TargetType="Button">
                <Setter Property="Foreground" Value="White" />
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="Button">
                            <Border x:Name="Border" 
                                        Background="{TemplateBinding Background}"
                                        BorderBrush="{TemplateBinding BorderBrush}"
                                        BorderThickness="{TemplateBinding BorderThickness}"
                                        CornerRadius="3">
                                <ContentPresenter HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                                                      VerticalAlignment="{TemplateBinding VerticalContentAlignment}"/>
                            </Border>
                            <ControlTemplate.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter TargetName="Border" Property="Opacity" Value="0.85"/>
                                </Trigger>
                                <Trigger Property="IsPressed" Value="True">
                                    <Setter TargetName="Border" Property="Opacity" Value="0.75"/>
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
            </Style>

            <DataTemplate x:Key="ImageItemDataTemplate">
                <Border Margin="6" Background="#2E2E2E" CornerRadius="4">
                  <Image Source="{Binding}"
                         Stretch="UniformToFill"
                         HorizontalAlignment="Stretch"
                         VerticalAlignment="Stretch" />
                </Border>
              </DataTemplate>

        </Grid.Resources>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="0.45*" />
            <ColumnDefinition Width="0.55*" />
        </Grid.ColumnDefinitions>

        <StackPanel Grid.Column="0" Background="#363636">

            <Grid Margin="10,10,10,5">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>
                <TextBlock Grid.Column="0" Text="CONTROL DE MEDIOS" Foreground="White" FontSize="18" FontWeight="Bold" VerticalAlignment="Center"/>
                <Button Grid.Column="1" x:Name="BtnAjustes" Content="⚙️ Ajustes" Height="30" Width="80" Click="BtnAjustes_Click"/>
            </Grid>

            <StackPanel Orientation="Horizontal" Margin="10,5,10,10" HorizontalAlignment="Stretch">
                <TextBlock Text="Guía Semanal:" Foreground="White" VerticalAlignment="Center" Margin="0,0,10,0"/>
                <Button x:Name="BtnCargarArchivo" Content="Cargar Guía (EPUB)" Height="30" Width="130" Click="BtnCargarArchivo_Click" Margin="0,0,10,0"/>
                <Button x:Name="BtnAsociarMedia" Content="Asociar Videos" Width="95" Click="BtnAsociarMedia_Click" Height="30" />
            </StackPanel>

            <TabControl Margin="10,0,10,10" Height="300">
                <TabItem Header="📖 Programa Semanal" Foreground="Black">
                    <ListBox x:Name="ListaPrograma" 
                                 Background="#444444" 
                                 Foreground="White" 
                                 BorderThickness="0"
                                 Margin="0"
                                 AllowDrop="True" 
                                 Drop="ListaPrograma_Drop"
                                 MouseDoubleClick="ListaPrograma_MouseDoubleClick" d:ItemsSource="{d:SampleData ItemCount=5}" />
                </TabItem>

                <!-- Reemplaza el TabItem "🖼️ Imágenes" por esta versión sin selector ni paginador -->
                <TabItem Header="🖼️ Imágenes" Foreground="Black">
                    <Grid Background="#363636">
                        <!-- Mantener solo el TabControl para las pestañas dinámicas de imágenes -->
                        <TabControl x:Name="TabControlImagenes" Background="#363636" Margin="6"/>
                    </Grid>
                </TabItem>

                <!-- Reemplaza el TabItem "🎬 Videos / 🎧 Audios" por esta versión responsive -->
                <TabItem Header="🎬 Videos / 🎧 Audios" Foreground="Black">
                    <Grid Background="#363636">
                        <ListBox x:Name="ListaVideos"
                                 Background="#2E2E2E"
                                 Foreground="White"
                                 BorderThickness="0"
                                 HorizontalContentAlignment="Stretch"
                                 Margin="6"
                                 SelectionChanged="ListaVideos_SelectionChanged"
                                 MouseDoubleClick="ListaVideos_MouseDoubleClick"
                                 ScrollViewer.VerticalScrollBarVisibility="Auto">
                            <!-- ItemsPanel: WrapPanel para permitir reflow en varias columnas -->
                            <ListBox.ItemsPanel>
                                <ItemsPanelTemplate>
                                    <WrapPanel IsItemsHost="True" Orientation="Horizontal" HorizontalAlignment="Left"/>
                                </ItemsPanelTemplate>
                            </ListBox.ItemsPanel>

                            <!-- DataTemplate: miniatura + texto debajo (vertical) sin tamaños fijos -->
                            <ListBox.ItemTemplate>
                                <DataTemplate>
                                    <Border Margin="6" Background="#2E2E2E" CornerRadius="4">
                                        <StackPanel Width="Auto" Orientation="Vertical">
                                            <Image Source="{Binding Thumbnail}"
                                                   Stretch="UniformToFill"
                                                   HorizontalAlignment="Center"
                                                   VerticalAlignment="Center"/>
                                            <TextBlock Text="{Binding FileName}" 
                                                       Foreground="White"
                                                       TextTrimming="CharacterEllipsis" 
                                                       Margin="6,4,6,6"
                                                       HorizontalAlignment="Center"
                                                       TextAlignment="Center"
                                                       Width="Auto"/>
                                        </StackPanel>
                                    </Border>
                                </DataTemplate>
                            </ListBox.ItemTemplate>
                        </ListBox>
                    </Grid>
                </TabItem>
            </TabControl>

            <Button x:Name="BtnTextoDelAnio" 
                        Content="PROYECTAR TEXTO DEL AÑO" 
                        Style="{StaticResource BotonEstiloHover}" 
                        Background="#5D5D5D" 
                        Foreground="White" 
                        Margin="10,0,10,5" 
                        Height="30" 
                        Click="BtnTextoDelAnio_Click"/>

            <Button x:Name="BtnProyectarHDMI" 
                        Content="PROYECTAR ON/OFF (OFF)" 
                        Style="{StaticResource BotonEstiloHover}" 
                        Background="#FF8C00" 
                        Foreground="White" 
                        Margin="10" 
                        Height="40" 
                        Click="BtnProyectarHDMI_Click"/>

        </StackPanel>

        <Grid Grid.Column="1" Background="Black">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/> <!-- PREVIEW arriba -->
                <RowDefinition Height="*"/>    <!-- IMAGEN GRANDE / Monitor abajo -->
            </Grid.RowDefinitions>

            <!-- PREVIEW movida aquí (arriba) -->
            <Border Grid.Row="0" Margin="10,10,10,6" Background="#2E2E2E" CornerRadius="4" Padding="6">
                <StackPanel>
                    <TextBlock Text="Previsualización" Foreground="#CCCCCC" FontWeight="Bold" Margin="0,0,0,6"/>
                    <Grid>
                        <Image x:Name="PreviewImage"
                               Height="120"
                               Stretch="Uniform"
                               HorizontalAlignment="Center"
                               VerticalAlignment="Center"
                               MouseWheel="PreviewImage_MouseWheel"
                               MouseDown="PreviewImage_MouseDown"
                               MouseMove="PreviewImage_MouseMove"
                               MouseUp="PreviewImage_MouseUp"
                               Cursor="Hand"
                               RenderTransformOrigin="0.5,0.5">
                            <Image.RenderTransform>
                                <TransformGroup>
                                    <ScaleTransform x:Name="PreviewScaleTransform" ScaleX="1" ScaleY="1" />
                                    <TranslateTransform x:Name="PreviewTranslateTransform" X="0" Y="0" />
                                </TransformGroup>
                            </Image.RenderTransform>
                        </Image>

                        <Border HorizontalAlignment="Left" VerticalAlignment="Bottom" Margin="6"
                                Background="#40000000" Padding="4" CornerRadius="4">
                            <StackPanel Orientation="Horizontal">
                                <Button x:Name="BtnPreviewReset" Click="BtnPreviewReset_Click" Width="60" Height="24">Reset</Button>
                            </StackPanel>
                        </Border>
                    </Grid>
                </StackPanel>
            </Border>

            <!-- IMAGEN GRANDE (monitor) -->
            <Grid Grid.Row="1" ClipToBounds="True"> <!-- evitar que la imagen salga del bloque -->
                <Image x:Name="MonitorDeSalida"
                       Stretch="Uniform"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Center"
                       Margin="10"
                       MouseWheel="Monitor_MouseWheel"
                       MouseDown="Monitor_MouseDown"
                       MouseMove="Monitor_MouseMove"
                       MouseUp="Monitor_MouseUp"
                       Cursor="Hand"
                       RenderTransformOrigin="0.5,0.5">
                    <Image.RenderTransform>
                        <TransformGroup>
                            <ScaleTransform x:Name="MonitorScaleTransform" ScaleX="1" ScaleY="1" />
                            <TranslateTransform x:Name="MonitorTranslateTransform" X="0" Y="0" />
                        </TransformGroup>
                    </Image.RenderTransform>
                </Image>

                <StackPanel VerticalAlignment="Bottom" Margin="10" Orientation="Vertical">
                    <!-- Info siempre visible -->
                    <TextBlock x:Name="TxtInfoMedia" Text="Reproduciendo: Ninguno" Foreground="White" Margin="0,0,0,6"/>

                    <!-- Panel de controles de media: aparece cuando se selecciona un vídeo -->
                    <StackPanel x:Name="MediaControlsPanel" Orientation="Vertical" Visibility="Collapsed">
                        <!-- Línea de tiempo -->
                        <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Margin="0,0,0,6">
                            <TextBlock x:Name="TxtCurrentTime" Text="00:00:00" Foreground="White" VerticalAlignment="Center" Margin="0,0,6,0"/>
                            <Slider x:Name="SldTimeline" Minimum="0" Maximum="1" Value="0" Width="320"
                                    ValueChanged="SldTimeline_ValueChanged"
                                    PreviewMouseDown="SldTimeline_PreviewMouseDown"
                                    PreviewMouseUp="SldTimeline_PreviewMouseUp"/>
                            <TextBlock x:Name="TxtTotalTime" Text=" / 00:00:00" Foreground="White" VerticalAlignment="Center" Margin="6,0,0,0"/>
                        </StackPanel>

                        <!-- Botones de reproducción, volumen -->
                        <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                            <Button x:Name="BtnPrev" Content="⏮" Width="36" Height="28" Click="BtnPrev_Click" Margin="0,0,6,0"/>
                            <Button x:Name="BtnPlayPause" Content="⏵" Width="36" Height="28" Click="BtnPlayPause_Click" Margin="0,0,6,0"/>
                            <Button x:Name="BtnStop" Content="⏹" Width="36" Height="28" Click="BtnStop_Click" Margin="0,0,6,0"/>
                            <Button x:Name="BtnNext" Content="⏭" Width="36" Height="28" Click="BtnNext_Click" Margin="0,0,12,0"/>
                            <TextBlock Text="Vol" Foreground="White" VerticalAlignment="Center" Margin="0,0,6,0"/>
                            <Slider x:Name="SldVolume" Value="75" Minimum="0" Maximum="100" ValueChanged="SldVolume_ValueChanged" Width="120" Margin="0,0,12,0"/>
                        </StackPanel>
                    </StackPanel>

                    <!-- Reset zoom para imagen grande: siempre visible -->
                    <Button x:Name="BtnResetZoom" Content="Reset Zoom Imagen" Width="160" Height="28" Click="BtnResetZoom_Click" Style="{StaticResource BotonEstiloHover}" Background="#5D5D5D" Margin="0,6,0,0"/>
                </StackPanel>
            </Grid>
        </Grid>
    </Grid>
</Window>