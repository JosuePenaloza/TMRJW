<Window x:Class="TMRJW.ProyeccionWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Proyección de Medios"
        WindowStyle="None"
        WindowState="Maximized"
        Background="Black"
        Loaded="Window_Loaded">

    <Grid x:Name="LayoutRoot" 
          Background="Black"
          MouseDown="LayoutRoot_MouseDown"
          MouseMove="LayoutRoot_MouseMove"
          MouseUp="LayoutRoot_MouseUp"
          MouseWheel="LayoutRoot_MouseWheel">

        <Image x:Name="imageDisplay" 
               HorizontalAlignment="Center" 
               VerticalAlignment="Center"
               Stretch="Uniform"
               RenderTransformOrigin="0.5,0.5">
            <Image.RenderTransform>
                <TransformGroup>
                    <ScaleTransform x:Name="ScaleTransform" />
                    <TranslateTransform x:Name="TranslateTransform" />
                </TransformGroup>
            </Image.RenderTransform>
        </Image>

    </Grid>
</Window>