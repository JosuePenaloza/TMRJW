<Window x:Class="TMRJW.ProyeccionWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Proyección"
        WindowStyle="SingleBorderWindow"
        WindowState="Normal"
        Background="Black"
        MouseDoubleClick="Window_MouseDoubleClick">

    <Grid x:Name="LayoutRoot">

        <!-- Doble buffer: dos Image apiladas; alternativamente se intercambian para cross-fade -->
        <Image x:Name="ProjectionImageA" 
               Stretch="Uniform" 
               HorizontalAlignment="Center" VerticalAlignment="Center"
               RenderOptions.BitmapScalingMode="HighQuality"/>

        <Image x:Name="ProjectionImageB" 
               Stretch="Uniform" 
               HorizontalAlignment="Center" VerticalAlignment="Center"
               RenderOptions.BitmapScalingMode="HighQuality" 
               Opacity="0"/>

        <!-- MediaElement oculto por defecto; usado cuando se proyecta vídeo -->
        <MediaElement x:Name="ProjectionMedia"
                      Stretch="Uniform"
                      HorizontalAlignment="Center" VerticalAlignment="Center"
                      LoadedBehavior="Manual"
                      UnloadedBehavior="Stop"
                      Visibility="Collapsed"
                      IsHitTestVisible="False"/>
    </Grid>
</Window>