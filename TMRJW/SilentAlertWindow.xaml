<Window x:Class="TMRJW.SilentAlertWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="{Binding TitleText}" Height="150" Width="360"
        WindowStyle="ToolWindow" ResizeMode="NoResize" ShowInTaskbar="False"
        WindowStartupLocation="CenterOwner" ShowActivated="False">
    <Grid Margin="8">
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <TextBlock x:Name="TxtMessage" TextWrapping="Wrap" />
        <StackPanel Orientation="Horizontal" Grid.Row="1" HorizontalAlignment="Right" Margin="0,8,0,0">
            <Button Width="80" Height="28" Click="Ok_Click">Aceptar</Button>
        </StackPanel>
    </Grid>
</Window>